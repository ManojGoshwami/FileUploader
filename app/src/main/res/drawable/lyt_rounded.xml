<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="@color/color_EFF3F6" />
            <corners android:radius="@dimen/activity_margin_10dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/activity_margin_1dp" android:color="@color/color_EFF3F6" />
            <corners android:radius="@dimen/activity_margin_10dp" />
        </shape>
    </item>
</selector>